{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cocktails API (Dapr)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dapr-run",
            "program": "${workspaceFolder}/src/Cocktails.Api/bin/Debug/net9.0/Cocktails.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Cocktails.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)|\\bApplication started.*",
                "uriFormat": "%s/scalar/v1"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "local",
                "ASPNETCORE_URLS": "https://localhost:7176;http://localhost:5296",
                "DAPR_HTTP_PORT": "5295",
                "DAPR_GRPC_PORT": "50001"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Cocktails API (Dapr - Direct)",
            "type": "coreclr",
            "request": "launch",
            "program": "dapr",
            "args": [
                "run",
                "--app-id", "cocktails-api",
                "--resources-path", "${workspaceFolder}/.dapr/",
                "--app-port", "7176",
                "--app-protocol", "https",
                "--dapr-http-port", "5295",
                "--dapr-grpc-port", "50001",
                "--metrics-port", "9090",
                "--",
                "dotnet",
                "run",
                "--project", "${workspaceFolder}/src/Cocktails.Api/Cocktails.Api.csproj"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)|\\bApplication started.*",
                "uriFormat": "%s/scalar/v1"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "local",
                "ASPNETCORE_URLS": "https://localhost:7176;http://localhost:5296",
                "DAPR_HTTP_PORT": "5295",
                "DAPR_GRPC_PORT": "50001"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "justMyCode": true,
            "console": "integratedTerminal"
        }
    ]
}