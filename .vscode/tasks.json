{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/Cocktails.Api.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "restore",
            "command": "dotnet",
            "type": "process",
            "args": [
                "restore",
                "${workspaceFolder}/Cocktails.Api.sln"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": ["clean"]
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Cocktails.Api.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": ["restore"]
        },
        {
            "label": "dapr-run",
            "type": "shell",
            "command": "dapr run --app-id cocktails-api --resources-path ${workspaceFolder}/.dapr/ --app-port 7176 --app-protocol https --dapr-http-port 5295 --dapr-grpc-port 50001 --metrics-port 9090 -- dotnet run --project ${workspaceFolder}/src/Cocktails.Api/Cocktails.Api.csproj",
            "isBackground": true,
            "dependsOn": "build",
            "problemMatcher": {
                "pattern": {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Starting Dapr.*|.*dapr run.*",
                    "endsPattern": ".*You're up and running!.*|.*Started Dapr.*|.*dapr started.*|.*Application started.*|.*Now listening on.*"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": false
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
} 