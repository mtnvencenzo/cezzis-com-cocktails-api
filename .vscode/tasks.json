{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/Cocktails.Api.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "restore",
            "command": "dotnet",
            "type": "process",
            "args": [
                "restore",
                "${workspaceFolder}/Cocktails.Api.sln"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": ["clean"]
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Cocktails.Api.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": ["restore"]
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/Cocktails.Api.sln"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": ["restore"]
        },
        {
            "label": "dapr-run",
            "type": "shell",
            "command": "dapr",
            "args": [
                "run",
                "--app-id",
                "cocktails-api-dapr",
                "--resources-path",
                "${workspaceFolder}/.dapr/local/",
                "--config",
                "${workspaceFolder}/.dapr/local/config.yaml",
                "--app-port",
                "7178",
                "--app-protocol",
                "https",
                "--dapr-http-port",
                "5295",
                "--dapr-grpc-port",
                "50003",
                "--metrics-port",
                "9091",
                "--scheduler-host-address",
                "localhost:50006"
            ],
            "isBackground": true,
            "dependsOn": ["build", "copy-certs"],
            "options": {
                "env": {
                    "SSL_CERT_DIR": "${workspaceFolder}/.certs/",
                    "OTEL_EXPORTER_OTLP_HEADERS": "Authorization=Bearer bd97d99d-f52d-4827-84d5-3760cbc2c8ea",
                    "OTEL_RESOURCE_ATTRIBUTES": "deployment.environment=local",
                    "DAPR_APP_TOKEN": "2eae500b-b212-4c6c-90fe-d9d35b7ac1c4", // Dapr sidecar token (sent from app to sidecar)
                    "APP_API_TOKEN": "a023b707-5781-4e8c-9df0-f1b07cb6a0e1" // Application token (sent from sidecar to app)
                }
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting Dapr",
                    "endsPattern": "You're up and running!"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "copy-certs",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/copy-certs.sh",
            "args": ["${workspaceFolder}"],
            "problemMatcher": []
        }
    ]
} 