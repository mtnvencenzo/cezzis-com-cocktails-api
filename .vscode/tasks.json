{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/Cocktails.Api.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "restore",
            "command": "dotnet",
            "type": "process",
            "args": [
                "restore",
                "${workspaceFolder}/Cocktails.Api.sln"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": ["clean"]
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Cocktails.Api.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": ["restore"]
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/Cocktails.Api.sln"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": ["restore"]
        },
        {
            "label": "dapr-run",
            "type": "shell",
            "command": "dapr",
            "args": [
                "run",
                "--app-id",
                "cocktails-api",
                "--resources-path",
                "${workspaceFolder}/.dapr/local/",
                "--app-port",
                "7178",
                "--app-protocol",
                "https",
                "--dapr-http-port",
                "5295",
                "--dapr-grpc-port",
                "50003",
                "--metrics-port",
                "9091"
            ],
            "isBackground": true,
            "dependsOn": "build",
            "problemMatcher": {
                "pattern": {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting Dapr",
                    "endsPattern": "You're up and running!"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            // "options": {
            //     "shell": {
            //         "executable": "cmd.exe",
            //         "args": ["/d", "/c"]
            //     }
            // }
        }
    ]
} 